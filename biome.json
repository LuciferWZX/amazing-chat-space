{
	"$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignore": [
			"**/node_modules/**",
			"**/dist/**",
			"**/build/**",
			"**/.next/**",
			"**/coverage/**",
			"**/.turbo/**",
			"**/public/**",
			"**/storybook-static/**",
			"**/.storybook/**",
			"**/pnpm-lock.yaml",
			"**/package-lock.json",
			"**/yarn.lock",
			"**/*.min.js",
			"**/*.min.css",
			"**/*.map"
		],
		"include": [
			"**/*.js",
			"**/*.jsx",
			"**/*.ts",
			"**/*.tsx",
			"**/*.json",
			"**/*.md"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100,
		"lineEnding": "lf",
		"ignore": []
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "error",
				"useExhaustiveDependencies": "error"
			},
			"suspicious": {
				"noExplicitAny": "warn",
				"noArrayIndexKey": "error"
			},
			"style": {
				"useConst": "error",
				"useBlockStatements": "error",
				"useShorthandArrayType": "error",
				"useTemplate": "error"
			},
			"complexity": {
				"noExcessiveCognitiveComplexity": "warn",
				"noMultipleSpacesInRegularExpressionLiterals": "error"
			},
			"performance": {
				"noDelete": "warn"
			},
			"security": {
				"noDangerouslySetInnerHtml": "error"
			},
			"nursery": {
				"noStaticElementInteractions": "off",
				"useImportType": "error",
				"useNodejsImportProtocol": "error"
			},
			"a11y": {
				"useKeyWithClickEvents": "error",
				"useKeyWithMouseEvents": "error",
				"useMediaCaption": "error",
				"useValidAriaProps": "error",
				"useValidAriaValues": "error",
				"useValidAnchor": "error",
				"useValidButton": "error",
				"useValidForm": "error",
				"useValidHeading": "error",
				"useValidImg": "error",
				"useValidInput": "error",
				"useValidLabel": "error",
				"useValidListItem": "error",
				"useValidTable": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingCommas": "es5",
			"semicolons": "always"
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"json": {
		"formatter": {
			"enabled": true
		}
	},
	"css": {
		"formatter": {
			"enabled": true
		}
	}
}
